'==============================================================================================================.
'                   KEY EVENTS SENT FROM USER FORM OR USER FORM CONTROLS                                       |
'=======================================================================================================.      |
'________________________________________________________________________________________________________|     |
'                                                                                                        |     |
'   this happens when a key is pressed while the userform has focus                                      |     |
'   the userform should not retain focus so we send focus to the batch sheet                             |     |
'_______________________________________________________________________________________________________ |     |
Sub UserFormKeyDownEvent(ByVal KeyCode As MSForms.ReturnInteger, ByVal Shift As Integer)                '|     |
    Call CallActivateBatchSheet                                                                         '|     |
End Sub                                                                                                 '|     |
Sub UserFormKeyUpEvent(ByVal KeyCode As MSForms.ReturnInteger, ByVal Shift As Integer)                  '|     |
    Call CallActivateBatchSheet                                                                         '|     |
End Sub                                                                                                 '|     |
'_______________________________________________________________________________________________________'|     |
'                                                                                                        |     |
'   userform keypress event (not the same as keyup or keydown                                            |     |
'_______________________________________________________________________________________________________ |     |
Sub CommonFormEvents_KeyPress(ByVal KeyAscii As MSForms.ReturnInteger)                                  '|     |
                                                                                                        '|     |
End Sub                                                                                                 '|     |
'_______________________________________________________________________________________________________'|     |
'                                                                                                        |     |
'   function keys that are common among user forms                                                       |     |
'_______________________________________________________________________________________________________ |     |
Sub CommonFormEvents_KeyDown(ByVal KeyCode As MSForms.ReturnInteger, ByVal Shift As Integer)            '|     |
    Me.CommonFormEvents_KeyUpOrDown KeyCode, Shift                                     '|     |
    mSuppressKeyUpstroke = True                                                                         '|     |
End Sub                                                                                                 '|     |
Sub CommonFormEvents_KeyUp(ByVal KeyCode As MSForms.ReturnInteger, ByVal Shift As Integer)              '|     |
    If Not mSuppressKeyUpstroke Then Me.CommonFormEvents_KeyUpOrDown KeyCode, Shift    '|     |
    mSuppressKeyUpstroke = False                                                                        '|     |
End Sub                                                                                                 '|     |
Sub CommonFormEvents_KeyUpOrDown(ByVal KeyCode As MSForms.ReturnInteger, ByVal Shift As Integer)        '|     |
    Select Case KeyCode                                                                                 '|     |
        Case vbKeyPageUp                                                                                '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then                                                 '|     |
            MsgBox "not configured"
                'Call APmodCommonKeys.CallPDFPageUp                                                  '|     |
            End If                                                                                      '|     |
        Case vbKeyPageDown                                                                              '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then                                                 '|     |
                MsgBox "not configured"
                'Call APmodCommonKeys.CallPDFPageDown                                                '|     |
            End If                                                                                      '|     |
        Case vbKeyEnd                                                                                   '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
                'Call APmodCommonKeys.CallMoveCurrentPDFtoRootFolder                                 '|     |
            End If                                                                                      '|     |
        Case vbKeyDelete                                                                                '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
                'Call APmodCommonKeys.CallMoveCurrentPDFtoTrashFolder                                '|     |
            End If                                                                                      '|     |
        Case vbKeyMultiply                                                                              '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
              '  Call APmodCommonKeys.CallViewMatchingInvoiceHistory                                 '|     |
            End If                                                                                      '|     |
        Case vbKeyDivide                                                                                '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
              '  Call APmodCommonKeys.CallViewSupplierInvoiceHistory                                 '|     |
            End If                                                                                      '|     |
        Case vbKeySubtract                                                                              '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
               ' Call APmodCommonKeys.CallManualInvoiceHistorySearch                                 '|     |
            End If                                                                                      '|     |
        Case vbKeyAdd                                                                                   '|     |
            If flgPDFisOpen And Shift = SHIFT_MASK Then
            MsgBox "not configured" '|     |
                'Call APmodCommonKeys.CallActivateBatchSheet                                         '|     |
            End If                                                                                      '|     |
        Case 192
        MsgBox "not configured" '|     |
            'Call APmodCommonKeys.CallToggleEntryMode                                                '|     |
    End Select                                                                                          '|     |
End Sub                                                                                                 '|     |
'________________________________________________________________________________________________________|     |
'                                                                                                              |
'=============================================================================================================='



'============================================================================
'   PROCEDURES TO ENABLE/DISABLE/TOGGLE THE SHORTCUT KEYS                   '
'============================================================================
Sub EnableKeyboardShortcuts()
    If Not InvoiceBatchEnvironmentWasInitialized Then InitializeInvoiceBatchEnvironment
    ToggleKeyboardShortcuts True, True
    EnableHotkeys = True

End Sub
Sub DisableKeyboardShortcuts()
    ToggleKeyboardShortcuts True, False
    EnableHotkeys = False

End Sub
Sub TemporarilyDisableKeyboardShortcuts()
    DisableKeyboardShortcuts
    Application.OnTime Now + TimeValue(sONKEY_TEN_SECOND_TIMER), sHOTKEY_PROCEDURE_TO_ENABLE
End Sub
Sub ToggleKeyboardShortcuts(Optional ByVal ExplicitMode As Boolean, Optional ByVal ExplicitlyEnabled As Boolean)
    Dim keyArray() As String, KeyCode As String, nameOfProcedureToCall As String
    Dim i As Long
    keyArray = GetHotKeyArray
    If Not ExplicitMode Then
        mEnableHotkeys = Not mEnableHotkeys
    Else
        mEnableHotkeys = ExplicitlyEnabled
    End If
    Select Case mEnableHotkeys
        Case True
            If Not gcAP.mainAPform Is Nothing Then ModifyFormButton gcAP.mainAPform.CommandButton_ToggleKeys, styleOn
            RaiseEvent HotKeysEnabled
        Case False
            If Not gcAP.mainAPform Is Nothing Then ModifyFormButton gcAP.mainAPform.CommandButton_ToggleKeys, styleOn
            RaiseEvent HotKeysDisabled
    End Select
    For i = LBound(keyArray) To UBound(keyArray)
        KeyCode = Split(keyArray(i), Chr(32))(0)
        nameOfProcedureToCall = Split(keyArray(i), Chr(32))(1)
        Select Case True
            Case ExplicitMode
                    Select Case ExplicitlyEnabled
                    Case True
                        Application.OnKey KeyCode, nameOfProcedureToCall
                    Case False
                        Application.OnKey KeyCode
                End Select
            Case Not ExplicitMode
                Select Case mEnableHotkeys
                    Case True
                        Application.OnKey KeyCode, nameOfProcedureToCall
                    Case False
                        Application.OnKey KeyCode
                End Select
        End Select
    Next i
End Sub

