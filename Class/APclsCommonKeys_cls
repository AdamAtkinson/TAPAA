Public Event HotKeysEnabled()

Private mEnableHotkeys As Boolean
Private mSuppressKeyUpstroke As Boolean

        '           APPLICATION.ONKEY KEYBINDINGS            '

'============================================================================
'   PRIMARY KEYBOARD SHORTCUTS - ALWAYS AVAILABLE                           '
'============================================================================

'add shortcut for gcAP.mainAPform.ToggleWidth

   

Private Sub Class_Initialize()
    ToggleKeyboardShortcuts True, True
End Sub
Private Sub Class_Terminate()
    ToggleKeyboardShortcuts True, False
End Sub
Public Property Get EnableHotkeys() As Boolean
    EnableHotkeys = mEnableHotkeys
End Property
Public Property Let EnableHotkeys(p_EnableHotKeys As Boolean)
    mEnableHotkeys = p_EnableHotKeys
End Property
Private Function GetHotKeyArray() As String()
    Dim tA() As String
    tA = APmodFunctions_Array.CreateStringArrayFromParameters( _
                                                    "+{DELETE} APmodCommonKeys.CallMoveCurrentPDFtoTrashFolder")        '   SHIFT DELETE           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+{END} APmodCommonKeys.CallMoveCurrentPDFtoRootFolder")            '   SHIFT END              '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+{PGUP} APmodCommonKeys.CallPDFPageUp")                            '   SHIFT PAGE UP          '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+{PGDN} APmodCommonKeys.CallPDFPageDown")                          '   SHIFT PAGE DOWN        '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "{144} APmodCommonKeys.CallTemporarilyDisableKeyboardShortcuts")    '   NUM LOCK               '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "^{144} APmodCommonKeys.CallDisableKeyboardShortcuts")              '   CTRL  NUM LOCK         '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "^{`} APmodCommonKeys.CallCreatePDFQueue")                          '   CTRL ~                 '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "{`} APmodCommonKeys.CallToggleEntryMode")                          '   ~                      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+{`} APmodCommonKeys.CallUploadToiServe")                          '   SHIFT ~                '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+^{`} APmodCommonKeys.CallToggleMainForm")                         '   CTRL SHIFT ~           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{`} APmodCommonKeys.CallLoadFrontEnd")                            '   ALT ~                  '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{38} APmodCommonKeys.CallShowEntryForms")                         '   ALT UP ARROW           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%+{38} APmodCommonKeys.CallCopyInvoiceRowFromAbove")               '   ALT SHIFT UP ARROW     '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%^{101} APmodCommonKeys.CallPDFShowFullScreen")                    '   ALT CTRL NUMPAD 5      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%^{96} APmodCommonKeys.CallPDFShownNone")                          '   ALT CTRL NUMPAD 0      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%^{104} APmodCommonKeys.CallPDFFitWidth")                          '   ALT CTRL NUMPAD 8      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%^{98} APmodCommonKeys.CallPDFFitHeight")                          '   ALT CTRL NUMPAD 2      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%^{97} APmodCommonKeys.CallPDFShowThumbs")                         '   ALT CTRL NUMPAD 1      '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{96} APmodCommonKeys.CallPDFHideApp")                             '   ALT NUMPAD 0           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{110} APmodCommonKeys.CallPDFShowApp")                            '   ALT NUMPAD .           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{111} APmodCommonKeys.CallViewSupplierInvoiceHistory")            '   ALT NUMPAD /           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{106} APmodCommonKeys.CallViewMatchingInvoiceHistory")            '   ALT NUMPAD *           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{109} APmodCommonKeys.CallActivateHistorySheet")                  '   ALT NUMPAD -           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{107} APmodCommonKeys.CallActivateBatchSheet")                    '   ALT NUMPAD +           '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+^{109} APmodCommonKeys.CallManualInvoiceHistorySearch")           '   CTRL SHIFT NUMPAD -    '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+^{107} APmodCommonKeys.CallGLQuery")                              '   SHIFT CTRL NUMPAD +    '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "^{20} APmodCommonKeys.CallGiveMainFormFocus")                      '   CTRL CAPS LOCK         '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "+{20} APmodCommonKeys.CallToggleRowStrikeThrough")                 '   SHIFT  CAPS LOCK       '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "{112} APmodCommonKeys.CallToggleRowStrikeThrough")                 '   F1                     '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{112} APmodCommonKeys.CallToggleAutoPopuplate")                   '   ALT F1                 '
    tA = APmodFunctions_Array.AddElementToRightOfStringArray(tA, _
                                                    "%{113} APmodCommonKeys.CallToggleRowStrikeThrough")                '   ALT F2                 '

    GetHotKeyArray = tA
End Function

